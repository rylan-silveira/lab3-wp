<%- include('header'); -%>
    <div class="content">
        <%= products %>
        <h1>Selected articles</h1>
        <table id="catalogue">
            <thead>
                <tr>
                    <th>Name</th>
                    <th scope="col">Reference</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <th scope="row">
                            <%= product.name %>
                        </th>
                        <td>
                            <a href="/api/article/<%= product.reference %>">
                                <%= product.reference %>
                            </a>
                        </td>
                        <td>
                            <%= product.category %>
                        </td>
                        <td>
                            <%= product.price %>AED
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
    <br>
    <%- include('footer'); -%>